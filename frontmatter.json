{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.pageFolders": [
    {
      "title": "Blog Posts",
      "path": "[[workspace]]/content/blog",
      "previewPath": "blog"
    },
    {
      "title": "Services",
      "path": "[[workspace]]/content/services",
      "previewPath": "services"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "preview",
          "name": "preview",
          "type": "string"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    }
  ],
  "frontMatter.content.publicFolder": "static",
  "frontMatter.framework.id": "hugo",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.snippets": {
    "Resize Image": {
      "description": "",
      "body": "{{< figure src=\"[[&mediaUrl]]\" alt=\"[[caption]]\" width=\"50px\" >}}",
      "isMediaSnippet": true
    },
    "Gallery": {
      "description": "Gallery Shortcode",
      "body": [
        "{{< galleries >}}",
        "{{< gallery src=\"/blog/er-1.webp\" title=\"Elden Ring\" >}}",
        "{{< gallery src=\"/blog/er-2.webp\" title=\"Best Soulsborne Game\" >}}",
        "{{< gallery src=\"/blog/er-3.webp\" title=\"Deep Lore\" >}}",
        "{{< gallery src=\"/blog/er-4.webp\" title=\"Awesome Bosses\" >}}",
        "{{< gallery src=\"/blog/er-5.webp\" title=\"Dark Atmosphere\" >}}",
        "{{< gallery src=\"/blog/er-6.webp\" title=\"Perfectly Balanced Difficulty\" >}}",
        "{{< /galleries >}}"
      ],
      "fields": []
    },
    "GPT Gallery": {
      "description": "",
      "body": [
        "{{< sidebyside ",
        "    src1=\"/images/photo1.jpg\" alt1=\"Photo 1\" ",
        "    src2=\"/images/photo2.jpg\" alt2=\"Photo 2\" ",
        "    src3=\"/images/photo3.jpg\" alt3=\"Photo 3\" ",
        "    width=\"250px\" ",
        ">}}",
        ""
      ],
      "fields": []
    },
    "Lightbox Gallery": {
      "description": "",
      "body": "{{< gallery match=\"images/*\" sortOrder=\"desc\" rowHeight=\"150\" margins=\"5\" thumbnailResizeOptions=\"600x600 q90 Lanczos\" showExif=true previewType=\"blur\" embedPreview=true loadJQuery=true >}}",
      "fields": []
    }
  }
}